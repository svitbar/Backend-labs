generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DBConnLink")
}

model User {
  id    Int     @default(autoincrement()) @id
  name  String?
  records Record[]
}

model Category {
  id    Int     @default(autoincrement()) @id
  name  String?
  records Record[]
}

model Record {
  id          Int     @default(autoincrement()) @id
  userId      Int
  categoryId  Int
  date        DateTime
  price       Float
  user        User     @relation(fields: [userId], references: [id])
  category    Category @relation(fields: [categoryId], references: [id])
}
